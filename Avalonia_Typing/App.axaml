<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Avalonia_Typing"
             x:Class="Avalonia_Typing.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="WindowStyles.axaml" />
        <StyleInclude Source="MenuStyles.axaml" />
        <StyleInclude Source="DialogStyles.axaml" />
        <StyleInclude Source="TextBoxStyles.axaml" />
    </Application.Styles>
</Application>