<UserControl
  x:Class="Avalonia_Typing.Views.Dialogs.HelpDialogView"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Classes="dialog-content">
  <StackPanel Margin="0" Spacing="8">
    <TextBlock Classes="dialog-title" Text="使用说明" />
    <TextBlock
      Classes="dialog-text"
      FontFamily="Google Sans Code, Ubuntu Mono, Consolas, HarmonyOS Sans SC, Noto Sans CJK SC, 微软雅黑"
      Text="1. 选择文本，输入第一个字符自动开始测试" />
    <TextBlock
      Classes="dialog-text"
      FontFamily="Google Sans Code, Ubuntu Mono, Consolas, HarmonyOS Sans SC, Noto Sans CJK SC, 微软雅黑"
      Text="2. 测试完成会自动弹出统计面板" />
    <TextBlock
      Classes="dialog-text"
      FontFamily="Google Sans Code, Ubuntu Mono, Consolas, HarmonyOS Sans SC, Noto Sans CJK SC, 微软雅黑"
      Text="3. 播放按钮作用：重新载入当前文本" />
  </StackPanel>
</UserControl>
