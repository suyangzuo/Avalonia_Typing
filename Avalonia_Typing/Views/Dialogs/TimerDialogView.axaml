<UserControl
  x:Class="Avalonia_Typing.Views.Dialogs.TimerDialogView"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Classes="dialog-content">
  <StackPanel Margin="0" Spacing="12">
    <TextBlock Classes="dialog-title" Text="计时设置：" />
    <StackPanel
      VerticalAlignment="Center"
      Orientation="Horizontal"
      Spacing="8">
      <TextBox
        x:Name="HoursInput"
        Width="60"
        Classes="dialog-textbox" />
      <TextBlock
        VerticalAlignment="Center"
        Margin="0,0,25,0"
        Classes="dialog-text"
        Text="时" />
      <TextBox
        x:Name="MinutesInput"
        Width="60"
        Classes="dialog-textbox" />
      <TextBlock
        VerticalAlignment="Center"
        Margin="0,0,25,0"
        Classes="dialog-text"
        Text="分" />
      <TextBox
        x:Name="SecondsInput"
        Width="60"
        Classes="dialog-textbox" />
      <TextBlock
        VerticalAlignment="Center"
        Margin="0,0,25,0"
        Classes="dialog-text"
        Text="秒" />
    </StackPanel>
    <CheckBox
      x:Name="CountdownCheckBox"
      Margin="0,4,0,0"
      Content="倒计时" />
  </StackPanel>
</UserControl>
